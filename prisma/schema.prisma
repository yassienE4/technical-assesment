generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Candidate {
  id                String   @id @default(uuid())
  fullName          String
  headline          String
  location          String
  yearsOfExperience Int
  skills            String[]
  availability      String
  status            String
  score             Int

  // backend-managed fields (required by assessment)
  shortlisted       Boolean  @default(false)
  rejected          Boolean  @default(false)

  // relations
  auditLog          AuditEvent[]

  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
}

model AuditEvent {
  id          String   @id @default(uuid())
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  at          DateTime @default(now())
  action      String
  from        String?   // store old value as string (simple)
  to          String?   // store new value as string (simple)

  @@index([candidateId, at])
}